<form class="{{cssClass}} empire-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Nom" /></h1>
      <div class="flexrow">
        <label>Difficulté: </label>
        <input type="text" name="system.difficulte" value="{{system.difficulte}}" data-dtype="Number" />
      </div>
    </div>
  </header>

  {{!-- Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="caractéristiques">Caractéristiques</a>
    <a class="item" data-tab="inventaire">Inventaire</a>
    <a class="item" data-tab="compétences">Compétences</a>
    <a class="item" data-tab="notes">Notes</a>
  </nav>

  {{!-- Contenu des onglets --}}
  <section class="sheet-body">
    {{!-- Onglet Caractéristiques --}}
    <div class="tab caractéristiques" data-group="primary" data-tab="caractéristiques">
      <div class="resources grid grid-2col">
        <div class="resource flex-group-center">
          <label for="data.sante.value" class="resource-label">{{localize "empire-long-hu.personnage.sante"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.sante.value" value="{{system.sante.value}}" data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.sante.max" value="{{system.sante.max}}" data-dtype="Number" />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="data.endurance.value" class="resource-label">{{localize "empire-long-hu.personnage.endurance"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.endurance.value" value="{{system.endurance.value}}" data-dtype="Number" />
            <span> / </span>
            <input type="text" name="system.endurance.max" value="{{system.endurance.max}}" data-dtype="Number" />
          </div>
        </div>
      </div>
    </div>

    {{!-- Onglet Inventaire --}}
    <div class="tab inventaire" data-group="primary" data-tab="inventaire">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Créer une arme" data-type="arme"><i class="fas fa-plus"></i> Arme</a>
            <a class="item-control item-create" title="Créer un objet" data-type="objet"><i class="fas fa-plus"></i> Objet</a>
          </div>
        </li>
        {{#each actor.items as |item id|}}
        {{#if (or (eq item.type "arme") (eq item.type "objet"))}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></div>
          <h4 class="item-name">{{item.name}}</h4>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier l'objet"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer l'objet"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>

    {{!-- Onglet Compétences --}}
    <div class="tab compétences" data-group="primary" data-tab="compétences">
      <ol class="items-list">
        <li class="item flexrow item-header">
          <div class="item-image"></div>
          <div class="item-name">Nom</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Créer une compétence" data-type="competence"><i class="fas fa-plus"></i> Ajouter</a>
          </div>
        </li>
        {{#each actor.items as |item id|}}
        {{#if (eq item.type "competence")}}
        <li class="item flexrow" data-item-id="{{item._id}}">
          <div class="item-image"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24" /></div>
          <h4 class="item-name">{{item.name}}</h4>
          <div class="item-controls">
            <a class="item-control item-edit" title="Modifier la compétence"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Supprimer la compétence"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        {{/if}}
        {{/each}}
      </ol>
    </div>

    {{!-- Onglet Notes --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      {{editor content=system.notes target="system.notes" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>